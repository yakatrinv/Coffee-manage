<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create-order" author="Katerina">
        <createTable tableName="order">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="price" type="float"/>
            <column name="sum" type="float"/>
            <column name="customer_id" type="int">
                <constraints foreignKeyName="order_customer_id_fk" references="customer(id)" nullable="false"/>
            </column>
            <column name="discount_id" type="int">
                <constraints foreignKeyName="order_discount_id_fk" references="discount(id)" nullable="false"/>
            </column>
            <column name="machine_id" type="int">
                <constraints foreignKeyName="order_machine_id_fk" references="machine(id)" nullable="false"/>
            </column>
            <column name="product_id" type="int">
                <constraints foreignKeyName="order_product_id_fk" references="product(id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>